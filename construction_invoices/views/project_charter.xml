<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_charter_view_tree" model="ir.ui.view">
            <field name="name">project.charter</field>
            <field name="model">project.charter</field>
            <field name="arch" type="xml">
                <tree string="project_charter">
                    <field name="project_id"/>
                    <field name="date"/>
                    <field name="description"/>
                    <field name="change_sponsor_id"/>
                    <field name="project_leader_id"/>
                    <field name="facilitator_id"/>
                </tree>
            </field>
        </record>
        <record id="project_charter_view_form" model="ir.ui.view">
            <field name="name">project.charter</field>
            <field name="model">project.charter</field>
            <field name="arch" type="xml">
                <form string="Construction Invoices">
                    <!--                    <header>-->
                    <!--                        <button name="reset_draft" string="Reset To Draft" type="object"-->
                    <!--                                attrs="{'invisible': [('state', '=', 'draft')]}"/>-->
                    <!--                        <button name="confrim" string="Confirm" class="oe_highlight" type="object"-->
                    <!--                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>-->
                    <!--                        <field name="state" widget="statusbar"/>-->
                    <!--                    </header>-->
                    <sheet>
                        <!--                        <div class="oe_button_box" name="expense_button_box">-->
                        <!--                            <button class="oe_stat_button" type="object" icon="fa-usd" name="action_view_payment">-->
                        <!--                                <field name="payment_count" string="Payment" widget="statinfo"/>-->
                        <!--                            </button>-->
                        <!--                        </div>-->
                        <h1>
                            <field name="project_id"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="description"/>
                            </group>
                            <group></group>
                            <group>
                                <field name="benefit_expected"/>
                            </group>
                            <group>
                                <field name="assumptions"/>
                            </group>
                            <group string="STAKEHOLDERS">
                                <field name="change_sponsor_id"/>
                                <field name="project_leader_id"/>
                                <field name="facilitator_id"/>
                                <field name="team_ids" widget="many2many_tags"/>
                            </group>
                            <group></group>
                            <group string="KEY EVENTS / MILESTONES:">
                                <field name="start_date"/>
                                <field name="project_created"/>
                            </group>
                            <group string=".">
                                <field name="end_date"/>
                            </group>
                            <group string="RESOURCES REQUIRED:">
                                <field name="operating_budget"/>
                                <field name="external_cost"/>
                                <field name="internal_expenses"/>
                                <field name="materials"/>
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_charter_action" model="ir.actions.act_window">
            <field name="name">Project Charter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.charter</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="project_charter_menu" name="Project Charter" parent="construction_project_menu"
                  action="project_charter_action"/>
    </data>
</odoo>