<odoo>
    <data>
        <record id="contract_view_owner_tree" model="ir.ui.view">
            <field name="name">contract</field>
            <field name="model">contract</field>
            <field name="arch" type="xml">
                <tree string="construction_project_tree">
                    <field name="contract_template_id"/>
                    <field name="partner_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="account1_id"/>
                    <field name="account2_id"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record id="contract_view_sub_tree" model="ir.ui.view">
            <field name="name">contract</field>
            <field name="model">contract</field>
            <field name="arch" type="xml">
                <tree string="construction_project_tree">
                    <field name="contract_template_id"/>
                    <field name="partner_id"/>
                    <field name="subcontractor_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="account1_id"/>
                    <field name="account2_id"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record id="contract_owner_view_form" model="ir.ui.view">
            <field name="name">contract</field>
            <field name="model">contract</field>
            <field name="arch" type="xml">
                <form string="construction_project_form">
                    <header>
                        <button name="action_confirm" string="Confirm" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!--                                <field name="name" />-->
                                <field name="construction_project_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="partner_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="type" invisible="1"/>
                                <field name="contract_template_id" domain="[('type', '=', type)]"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="subcontractor_id"
                                       attrs="{'readonly':[('state', '!=', 'draft')],
                                       'invisible':[('type', '=', 'owner')],
                                       'required':[('type', '!=', 'owner')]}"/>
                                <field name="account1_id" string="Partner Account"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="account2_id" string="Revenue Account"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="date" required="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="attachment" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="line" string="lines">
                                <field name="line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="description"/>
                                        <field name="uom_id"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="total" sum="Total"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="contract_total">
                                    <field name="total"/>
                                </group>
                            </page>
                            <page string="Addition">
                                <field name="addition_line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name"
                                               domain="[('type', '=', 'addition'),('to', '=', contract_type)]"/>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="contract_type" invisible="1"/>
                                        <field name="account_id"/>
                                        <field name="percentage"/>
                                        <field name="percentage_amount"/>
                                        <!--                                        <field name="value"/>-->
                                        <field name="contract_total_value"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Deduction">
                                <field name="deduction_line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name"
                                               domain="[('type', '=', 'deduction'),('to', '=', contract_type)]"/>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="contract_type" invisible="1"/>
                                        <field name="account_id"/>
                                        <field name="percentage"/>
                                        <field name="percentage_amount"/>
                                        <!--                                        <field name="value"/>-->
                                        <field name="contract_total_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="contract_sub_view_form" model="ir.ui.view">
            <field name="name">contract</field>
            <field name="model">contract</field>
            <field name="arch" type="xml">
                <form string="construction_project_form">
                    <header>
                        <button name="action_confirm" string="Confirm" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!--                                <field name="name" />-->
                                <field name="construction_project_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="partner_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="date" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="type" invisible="1"/>
                                <field name="contract_template_id" domain="[('type', '=', type)]"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="contract_type"/>
                                <field name="competition_id" domain="[('state', '=', 'confirm')]"
                                       attrs="{'invisible':[('contract_type', '=', '1')],
                                'required':[('contract_type', '=', '2')]}"/>
                            </group>
                            <group>
                                <field name="subcontractor_id"
                                       attrs="{'readonly':[('state', '!=', 'draft')],
                                       'invisible':[('type', '=', 'owner')],
                                       'required':[('type', '!=', 'owner')]}"/>
                                <field name="account1_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="account2_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="attachment" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="line" string="lines">
                                <field name="line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="wbs_line_id" domain="[('type', '=', 'child')]"
                                               options="{'no_create': True}"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="contract_total">
                                    <field name="total"/>
                                </group>
                            </page>
                            <page string="Addition">
                                <field name="addition_line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name"
                                               domain="[('type', '=', 'addition'),('to', '=', contract_type)]"/>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="contract_type" invisible="1"/>
                                        <field name="account_id"/>
                                        <field name="percentage"/>
                                        <field name="percentage_amount"/>
                                        <!--                                        <field name="value"/>-->
                                        <field name="contract_total_value"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Deduction">
                                <field name="deduction_line_ids" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="name"
                                               domain="[('type', '=', 'deduction'),('to', '=', contract_type)]"/>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="contract_type" invisible="1"/>
                                        <field name="account_id"/>
                                        <field name="percentage"/>
                                        <field name="percentage_amount"/>
                                        <!--                                        <field name="value"/>-->
                                        <field name="contract_total_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="contract_sub_action" model="ir.actions.act_window">
            <field name="name">Contract Subcontractor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract</field>
            <field name="domain">[('type', '=', 'subcontractor')]</field>
            <field name="context">{'default_type': 'subcontractor'}</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('contract_view_sub_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('contract_sub_view_form')})]"/>
        </record>
        <record id="contract_owner_action" model="ir.actions.act_window">
            <field name="name">Contract Owner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract</field>
            <field name="domain">[('type', '=', 'owner')]</field>
            <field name="context">{'default_type': 'owner'}</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('contract_view_sub_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('contract_owner_view_form')})]"/>

        </record>
        <menuitem id="contact_menu" name="Contract" parent="construction_project_root"/>
        <menuitem id="contract_owner_menu" name="Owner" parent="contact_menu"
                  action="contract_owner_action"/>
        <menuitem id="contract_sub_menu" name="Subcontractor" parent="contact_menu" action="contract_sub_action"/>
    </data>
</odoo>
