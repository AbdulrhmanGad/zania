<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="competition_view_tree" model="ir.ui.view">
            <field name="name">competition_view_tree</field>
            <field name="model">construction.competition</field>
            <field name="arch" type="xml">
                <tree string="competition_tree">
                    <field name="project_id"/>
                    <field name="date"/>
                    <field name="customer_id"/>
                    <field name="subcontractor_id"/>
                </tree>
            </field>
        </record>
        <record id="competition_view_form" model="ir.ui.view">
            <field name="name">construction.competition</field>
            <field name="model">construction.competition</field>
            <field name="arch" type="xml">
                <form string="Construction Invoices">
                    <header>
                        <button name="reset_draft" string="Reset To Draft" type="object"
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <button name="confirm" string="Confirm" class="oe_highlight" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!--                        <div class="oe_button_box" name="expense_button_box">-->
                        <!--                            <button class="oe_stat_button" type="object" icon="fa-usd" name="action_view_payment">-->
                        <!--                                <field name="payment_count" string="Payment" widget="statinfo"/>-->
                        <!--                            </button>-->
                        <!--                        </div>-->
                        <h1>
                            <field name="project_id"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="customer_id"/>
                                <field name="subcontractor_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="lines" string="lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="item_id"/>
                                        <field name="qty"/>
                                        <field name="unit_price"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Technical Reason" name="technical_reason">
                                <field name="technical_reason"/>
                            </page>
                            <page string="Financial Reason" name="financial_reason">
                                <field name="financial_reason"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="competition_action" model="ir.actions.act_window">
            <field name="name">Construction Competition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.competition</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="competition_menu" name="Competition" parent="construction_project_menu"
                  action="competition_action"/>
    </data>
</odoo>