<odoo>
    <data>

        <record id="tender_line_view_tree" model="ir.ui.view">
            <field name="name">_view_tree</field>
            <field name="model">tender.line</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="uom_id"/>
                    <field name="qty"/>
                    <field name="price"/>
                    <field name="total"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="construction_view_company_form" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="journal_id"/>
                    <field name="sub_journal_id"/>
                </xpath>
            </field>
        </record>

        <record id="construction_project_view_tree" model="ir.ui.view">
            <field name="name">construction_project_view_tree</field>
            <field name="model">construction.project2</field>
            <field name="arch" type="xml">
                <tree string="construction_project_tree">
                    <field name="create_date"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="manager_id"/>
                    <field name="consultant_id"/>
                    <field name="type_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="construction_project_view_form" model="ir.ui.view">
            <field name="name">construction_project_view_form</field>
            <field name="model">construction.project2</field>
            <field name="arch" type="xml">
                <form string="construction_project_form">
                    <header>
                        <button name="create_breakdown" string="Create Break Down" class="oe_highlight" type="object"/>
                        <button name="create_financial_offer" string="Financial Offer " class="oe_highlight"
                                type="object" attrs="{'invisible':[('financial_offer_id', '!=', False)]}"/>
                        <!--                        <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,confirm"/>-->
                    </header>

                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_view_breakdown" class="oe_stat_button" icon="fa-bars" type="object"
                                    string="Break Down">
                                <field name="breakdown_count"/>
                            </button>
                            <button name="action_view_form_financial" class="oe_stat_button" icon="fa-book" type="object"
                                    attrs="{'invisible':[('financial_offer_id', '=', False)]}" string="Financial Offer">
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <label for="name" class="oe_edit_only"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!--                                <field name="name"/>-->
                                <field name="partner_id"/>
                                <field name="manager_id"/>
                                <field name="consultant_id"/>
                                <field name="type_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="create_date"/>
                                <field name="attachment"/>
                                <field name="financial_offer_id" invisible="0"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tender" name="tender">
                                <field name="tender_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="item_id"/>
                                        <field name="description"/>
                                        <field name="uom_id"/>
                                        <field name="type" invisible="0"/>
                                        <field name="qty" attrs="{'readonly':[('type', '=', 'view')]}"/>
                                        <field name="break_down_id" invisible="1"/>
                                        <field name="price"/>
                                        <field name="total"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="description" string="Description">
                                <field name="description"/>
                            </page>
                            <page name="settings" string="Settings">
                                <group>
                                    <group>
                                        <field name="manager_id"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="analytic_account_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="construction_project_action2" model="ir.actions.act_window">
            <field name="name">Construction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.project2</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="construction_project_menu"
                  name="Construction"
                  sequence="1"
                  parent="construction_project_root"
                  action="construction_project_action2"/>
        <menuitem id="construction_project_menu2"
                  name="Construction"
                  sequence="1"
                  parent="construction_project_menu"
                  action="construction_project_action2"/>
    </data>
</odoo>
