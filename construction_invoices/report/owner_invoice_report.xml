<odoo>
    <data>

        <record id="owner_invoice_report_search_view" model="ir.ui.view">
            <field name="name">construction.invoice</field>
            <field name="model">construction.invoice</field>
            <field name="arch" type="xml">
                <search string="Cheque">
                    <field name="name"/>
                    <field name="invoice_number"/>
                    <field name="date"/>
                    <field name="due_date"/>
                    <field name="construction_project_id"/>
                    <field name="contract_id"/>
                    <field name="partner_id"/>
                    <field name="payment_state"/>
                    <filter string="Name" name="name" context="{'group_by':'name'}"/>
                    <filter string="Invoice Number" name="invoice_number" context="{'group_by':'invoice_number'}"/>
                    <filter string="Date" name="date" context="{'group_by':'date'}"/>
                    <filter string="Due Date" name="due_date" context="{'group_by':'due_date'}"/>
                    <filter string="Project" name="construction_project_id"
                            context="{'group_by': 'construction_project_id'}"/>
                    <filter string="Partner" name="partner_id" context="{'group_by':'partner_id'}"/>
                    <filter string="Contract" name="contract_id" context="{'group_by':'contract_id'}"/>
                    <filter string="Payment State" name="payment_state" context="{'group_by':'payment_state'}"/>
                </search>
            </field>
        </record>

        <record id="owner_invoice_report_view_tree" model="ir.ui.view">
            <field name="name">construction.invoice</field>
            <field name="model">construction.invoice</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name"/>
                    <field name="invoice_number"/>
                    <field name="date"/>
                    <field name="due_date" optional="hide"/>
                    <field name="construction_project_id"/>
                    <field name="contract_id"/>
                    <field name="partner_id"/>
                    <field name="contract_id"/>
                    <field name="contract_id"/>
                    <field name="payment_state"/>
                    <field name="total_current_value" sum="total" optional="show"/>
                    <field name="total_current_ded" sum="total" optional="show"/>
                    <field name="total_current_add" sum="total" optional="show"/>
                    <field name="amount_total" sum="total" optional="show"/>
                    <field name="amount_paid" string="Paid" sum="total" optional="show"/>
                    <field name="amount_difference" string="Remaining" sum="total" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="owner_invoice_report_action" model="ir.actions.act_window">
            <field name="name">Owner Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.invoice</field>
            <field name="domain">[('construction_type', '=', 'owner')]</field>
            <field name="view_mode">tree,search,pivot,graph</field>
            <field name="search_view_id" ref="owner_invoice_report_search_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('owner_invoice_report_view_tree')}),
        ]"/>

        </record>
        <menuitem id="owner_invoice_report" name="Owner Invoice" action="owner_invoice_report_action"
                  parent="configuration_report_menu"/>
    </data>
</odoo>