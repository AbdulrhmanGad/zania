<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="construction_project_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <center>
                                <h2>تقرير بنود الأعمال
                                    <span t-esc="doc.name"/>
                                </h2>
                            </center>
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        Date :
                                        <span t-esc="doc.date"/>
                                    </p>
                                    <p>
                                        Customer :
                                        <span t-esc="doc.partner_id.name"/>
                                    </p>
                                    <p>
                                        Manager :
                                        <span t-esc="doc.manager_id.name"/>
                                    </p>
                                    <p>
                                        Consultant :
                                        <span t-esc="doc.consultant_id.name"/>
                                    </p>
                                    <p>
                                        Type :
                                        <span t-esc="doc.type_id.name"/>
                                    </p>
                                </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Item</th>
                                        <th>Description</th>
                                        <th>Unit of Measure</th>
                                        <th>Type</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                        <th>total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.tender_line_ids" t-as="line">
                                        <td>
                                            <span t-esc="line.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.item_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.description"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.uom_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.type"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.qty"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.price"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report id="construction_project_id"
                model="construction.project2"
                report_type="qweb-pdf"
                string="Project"
                name="construction_invoices.construction_project_template"
                file="construction_invoices.construction_project_template"
        />
    </data>
</odoo>