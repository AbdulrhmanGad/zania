<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="financial_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <center>
                                <h2>Financial Offer :-
                                    <span t-esc="doc.name"/>
                                </h2>
                            </center>
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        Date :
                                        <span t-esc="doc.date"/>
                                    </p>
                                    <p>
                                        Project :
                                        <span t-esc="doc.project_id.name"/>
                                    </p>
                                    <p>
                                        Partner :
                                        <span t-esc="doc.partner_id.name"/>
                                    </p>
                                </div>
                            </div>
                            <table  class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Item</th>
                                        <th>Description</th>
                                        <th>Unit of Measure</th>
                                        <th>Type</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                        <th>Disc%</th>
                                        <th>Discount</th>
                                        <th>total</th>
                                        <th>total after Dsicount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.line_ids" t-as="line">
                                        <td>
                                            <span t-esc="line.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.item_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.description"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.uom_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.type"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.qty"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.price"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.discount"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.discount_amount"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.total_after_disc"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row" name="total">
                                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td name="td_amount_untaxed_label">
                                                    <strong>Total</strong>
                                                </td>
                                                <td name="td_amount_untaxed" class="text-right">
                                                    <span t-field="doc.total"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal" style="">
                                                <td name="td_amount_untaxed_label">
                                                    <strong>Discount</strong>
                                                </td>
                                                <td name="td_amount_untaxed" class="text-right">
                                                    <span t-field="doc.total_discount"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td name="td_amount_total_label">
                                                    <strong>Total After Discount</strong>
                                                </td>
                                                <td name="td_amount_total" class="text-right">
                                                    <span t-field="doc.total_all"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report id="financial_id"
                model="financial.offer"
                report_type="qweb-pdf"
                string="Financial Offer"
                name="construction_invoices.financial_template"
                file="construction_invoices.financial_template"
        />
    </data>
</odoo>