<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="project_charter_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <center>
                                <h2>Project Charter
                                    <span t-esc="doc.project_id.name"/>
                                </h2>
                            </center>
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        <strong>Date :</strong>
                                        <span t-esc="doc.date"/>
                                    </p>
                                    <p>
                                        <strong>Description :</strong>
                                        <span t-esc="doc.description"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <p>
                                        <p>
                                            <strong>BENEFIT AND EXPECTED EFFECT (Key Deliverables):</strong>
                                        </p>
                                        <span t-esc="doc.benefit_expected"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <p>
                                        <p>
                                            <strong>ASSUMPTIONS, RISKS AND RISK MITIGATION PLAN:</strong>
                                        </p>
                                        <span t-esc="doc.assumptions"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <p>STAKEHOLDERS</p>
                                    </strong>
                                    <strong>Change Sponsor:</strong>
                                    <span t-esc="doc.change_sponsor_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>Project Leader:</strong>
                                    <span t-esc="doc.project_leader_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>Change Facilitator:</strong>
                                    <span t-esc="doc.facilitator_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>Team Member:</strong>
                                    <t t-foreach="doc.team_ids" t-as="line">
                                        <span t-esc="line.name"/>,
                                    </t>
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-12">
                                    <strong>KEY EVENTS / MILESTONES:</strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>
                                        <strong>Start Date :</strong>
                                    </span>
                                    <span t-esc="doc.start_date"/>
                                </div>
                                <div class="col-6">
                                    <span>
                                        <strong>End Date :</strong>
                                    </span>
                                    <span t-esc="doc.end_date"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong>IS Project Plan Created ?</strong>
                                    <span t-esc="doc.project_created"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>RESOURCES REQUIRED:</strong>
                                    <p>
                                        <strong>Operating Budget :</strong>
                                        <span t-esc="doc.operating_budget"/>
                                    </p>
                                    <p>
                                        <strong>External costs :</strong>
                                        <span t-esc="doc.external_cost"/>
                                    </p>
                                    <p>
                                        <strong>Internal expenses :</strong>
                                        <span t-esc="doc.internal_expenses"/>
                                    </p>
                                    <p>
                                        <strong>Materials :</strong>
                                        <span t-esc="doc.materials"/>
                                    </p>

                                </div>
                            </div>
                            <table class="table table-bordered  table-sm">
                                <thead class="thead-light">
                                    <tr>
                                        <th colspan="4">Approval/Review</th>
                                    </tr>
                                    <tr>
                                        <th>Role</th>
                                        <th >Name</th>
                                        <th >Date</th>
                                        <th >Signature</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span>project Leader</span>
                                        </td>
                                        <td>
                                            <p t-esc="doc.project_leader_id.name"/>
                                        </td>
                                        <td><span t-esc="doc.date"/></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Team Members</span>
                                        </td>
                                        <td>
                                            <t t-foreach="doc.team_ids" t-as="line">
                                                <p t-esc="line.name"/>
                                            </t>
                                        </td>
                                        <td><span t-esc="doc.date"/></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Change Sponsor</span>
                                        </td>
                                        <td>

                                            <p t-esc="doc.change_sponsor_id.name"/>
                                        </td>
                                        <td><span t-esc="doc.date"/></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Change Facilitator</span>
                                        </td>
                                        <td>
                                            <p t-esc="doc.facilitator_id.name"/>
                                        </td>
                                        <td><span t-esc="doc.date"/></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>


                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report id="project_charter_report"
                model="project.charter"
                report_type="qweb-pdf"
                string="Project Charter"
                name="construction_invoices.project_charter_template"
                file="construction_invoices.project_charter_template"
        />
    </data>
</odoo>