<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="receivable_group_view_tree" model="ir.ui.view">
            <field name="name">receivable_group_view_tree</field>
            <field name="model">account.payment.group</field>
            <field name="arch" type="xml">
                <tree string="receivable_group_tree">
                    <field name="name"/>
                    <field name="cheques_no"/>
                    <field name="cheques_total"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="date"/>
                    <field name="ref"/>
                    <field name="cheque_ids"/>
                </tree>
            </field>
        </record>
        <record id="receivable_group_view_form" model="ir.ui.view">
            <field name="name">receivable_group_view_form</field>
            <field name="model">account.payment.group</field>
            <field name="arch" type="xml">
                <form string="receivable_group_form">
                    <header>
                        <button name="confirm_group" type="object" string="Create Group" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="reset_to_draft" type="object" string="Reset Draft"  attrs="{'invisible':[('state','=','draft')]}"/>
                        <button name="confirm_cheques" type="object" string="Confirm All" class="oe_highlight"  attrs="{'invisible':[('state','=','draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <h1>
                            <div>
                                <label for="name" class="oe_edit_only"/>
                            </div>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                                <field name="journal_id" required="1" domain="[('receive_cheque', '=', True)]"/>
                                <field name="cheques_no"/>
                                <field name="cheques_total"/>
                            </group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="ref"/>
                                <field name="cheque_bank_id"/>
                                <field name="currency_id"/>
                            </group>

                            <field name="cheque_ids">
                                <tree editable="bottom">
                                    <field name="state" invisible="1"/>
                                    <field name="suitable_journal_ids" invisible="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="journal_id" invisible="0"/>
                                    <field name="cheque_bank_id"/>
                                    <field name="cheque_no"/>
                                    <field name="amount" required="1" sum="total"/>
                                    <field name="currency_id" readonly="1"/>
                                    <field name="due_date"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="receivable_group_action" model="ir.actions.act_window">
            <field name="name">Group Cheque Receivable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment.group</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="receivable_group_menu" name="Group Cheque Receivable" action="receivable_group_action"
                  parent="cheque_root"/>
    </data>
</odoo>